def solve_mendel(k, m, n):
    # Total population size
    t = k + m + n
    
    # Total number of possible mating pairs (combinations)
    # Using t*(t-1) as the denominator for simplicity in probability addition
    total_pairs = t * (t - 1)
    
    # Probability of picking two homozygous recessive (n, n)
    # They always produce recessive offspring (100% or 1/1)
    prob_nn = (n * (n - 1)) / total_pairs
    
    # Probability of picking one heterozygous and one recessive (m, n) or (n, m)
    # They produce recessive offspring 50% of the time (1/2)
    prob_mn = (2 * m * n) / total_pairs
    
    # Probability of picking two heterozygous (m, m)
    # They produce recessive offspring 25% of the time (1/4)
    prob_mm = (m * (m - 1)) / total_pairs
    
    # Sum the recessive probabilities weighted by their inheritance chance
    prob_recessive = (prob_nn * 1) + (prob_mn * 0.5) + (prob_mm * 0.25)
    
    # The answer is the complement: 1 - P(recessive)
    return 1 - prob_recessive

# Sample Dataset
k, m, n = 2, 2, 2
print(round(solve_mendel(k, m, n), 5))

#CLAUDE
# Read input
k, m, n = map(int, input().split())

# Total population
total = k + m + n

# Calculate probability for each pairing type
# Format: (count of type1, count of type2, probability of dominant offspring)

prob = 0

# k-k pairing (homozygous dominant x homozygous dominant): 100% dominant
prob += (k / total) * ((k - 1) / (total - 1)) * 1.0

# k-m pairing (homozygous dominant x heterozygous): 100% dominant
prob += (k / total) * (m / (total - 1)) * 1.0
prob += (m / total) * (k / (total - 1)) * 1.0

# k-n pairing (homozygous dominant x homozygous recessive): 100% dominant
prob += (k / total) * (n / (total - 1)) * 1.0
prob += (n / total) * (k / (total - 1)) * 1.0

# m-m pairing (heterozygous x heterozygous): 75% dominant
prob += (m / total) * ((m - 1) / (total - 1)) * 0.75

# m-n pairing (heterozygous x homozygous recessive): 50% dominant
prob += (m / total) * (n / (total - 1)) * 0.5
prob += (n / total) * (m / (total - 1)) * 0.5

# n-n pairing (homozygous recessive x homozygous recessive): 0% dominant
prob += (n / total) * ((n - 1) / (total - 1)) * 0.0

print(f"{prob:.5f}")

